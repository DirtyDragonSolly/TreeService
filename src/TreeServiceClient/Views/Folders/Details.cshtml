@using TreeServiceClient.Models.Responses.FolderModels
@model GetFolderResponse

<h2>Информация о папке</h2>

<div class="form-group">
    <label><strong>Id:</strong></label>
    <p>@Model.Id</p>
</div>
<div class="form-group">
    <label><strong>Название:</strong></label>
    <p>@Model.Name</p>
</div>
<div class="form-group">
    <label><strong>Id родительской папки:</strong></label>
    <p>@(Model.ParentId?.ToString() ?? "Отсутствует")</p>
</div>

<a asp-action="Index" class="btn btn-secondary">На главную</a>
<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Изменить</a>
<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Удалить</a>