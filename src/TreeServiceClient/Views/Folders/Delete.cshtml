@using TreeServiceClient.Models.Requests.FolderModels
@model DeleteFolderRequest

<h2>Удалить папку</h2>

<p>Вы уверены, что хотите удалить эту папку?</p>

<div class="form-group">
    <label><strong>Id папки:</strong></label>
    <p>@Model.Id</p>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Удалить</button>
    <a asp-action="Index" class="btn btn-secondary">Отменить</a>
</form>